{
    "name": "unconstrained",

    "build":{
        "dockerfile": "../Dockerfile",
        "context": "..",
        "target": "dev",
    },
    
    "settings": {
        
        // Python location
        "python.defaultInterpreterPath": "/opt/venv/bin",
        "python.pythonPath": "/opt/venv/bin",
        "python.disableInstallationCheck": true,
                        
        // Typechecking and linting
        "python.languageServer": "Pylance",
        "python.linting.enabled": true,
        "python.analysis.typeCheckingMode": "basic",
        "python.analysis.diagnosticSeverityOverrides": {
            "reportUnboundVariable" : "information", 
            "reportImplicitStringConcatenation" : "warning" 
        },

        // Pytest integration
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": ["tests"],
        "python.testing.unittestEnabled": false,
        "python.testing.nosetestsEnabled": false,
                
        // Zsh Shell
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
            "zsh": {
              "path": "/bin/zsh",
              "args": ["-l"]
            }
          },

        // Misc
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "telemetry.enableTelemetry": false,
        "telemetry.telemetryLevel" : 0,

    },

    "extensions": [
        // Offical python plugin
		"ms-python.python",
        // Jupyter notebook integration
		"ms-toolsai.jupyter",
        // MiniZinc syntax highlighting
		"dekkerone.minizinc",
        // Access workspace via web browser (good for .html)
        "ritwickdey.liveserver",
        // CueLang syntax highlighting
        "nickgo.cuelang",
        // Markdown emoji previews
        "bierner.markdown-emoji",
        // Browse SQLite databases
        "alexcvzz.vscode-sqlite"
	],
    
    "runArgs": [ 
        "--init",
        "--hostname", "host",
         "--net", "host"
    ],
    
    "mounts":[
        // Access hosts docker engine
         "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    ],
    
    // Custom project path in container (default is /workspaces/{foldername})
    "workspaceFolder": "/app",
    "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
    
    "containerEnv": {
        "DO_NOT_TRACK" : "1"
    }
    
}