{
    // Name appearing in the bottom left corner
    "name": "unconstrained",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": "..",
        "target": "dev"
    },
    "workspaceFolder": "/app",
    "mounts": [
        "source=${localWorkspaceFolder},target=/app,type=bind"
    ],
    "postCreateCommand": "uv sync --frozen --group dev",
    // VSCode settings inside the container
    "customizations": {
        "vscode": {
            "settings": {
                // Python location
                // "python.defaultInterpreterPath": "/opt/venv/bin",
                // "python.pythonPath": "/opt/venv/bin",
                // "python.disableInstallationCheck": true,
                // Typechecking and linting
                // "python.languageServer": "Pylance",
                // "python.analysis.typeCheckingMode": "basic",
                // "python.analysis.diagnosticSeverityOverrides": {
                //     "reportUnboundVariable": "information",
                //     "reportImplicitStringConcatenation": "warning"
                // },
                // // Pytest integration
                // "python.testing.pytestEnabled": true,
                // "python.testing.pytestArgs": [
                //     "tests"
                // ],
                // "python.testing.unittestEnabled": false,
                // "python.testing.nosetestsEnabled": false,
                // Zsh Shell
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "/bin/zsh",
                        "args": [
                            "-l"
                        ]
                    }
                },
                // Misc
                // "editor.detectIndentation": false,
                // "editor.insertSpaces": true,
                "telemetry.telemetryLevel": "off"
            },
            "extensions": [
                // Offical python plugin
                "ms-python.python",
                // Python debugging
                "ms-python.debugpy",
                // Jupyter notebook integration
                "ms-toolsai.jupyter",
                // MiniZinc syntax highlighting
                "dekkerone.minizinc",
            ]
        }
    },
    "runArgs": [
        "--init",
        "--hostname",
        "host"
    ],
    "containerEnv": {
        "DO_NOT_TRACK": "1"
    }
}