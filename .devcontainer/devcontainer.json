{
    "name": "unconstrained",

    // Custom project path in container (default is /workspaces/{foldername})
    "workspaceFolder": "/unconstrained",
    "workspaceMount": "source=${localWorkspaceFolder},target=/unconstrained,type=bind,consistency=cached",
            
    "build":{
        "dockerfile": "../Dockerfile",
        "context": "..",
        "target": "dev",
        "args": {
            "USER_UID": "1000",
            "USER_GID": "1000",        
            "USER_NAME": "harken",
            "APP_PATH": "/unconstrained"
        }
    },
            
    "mounts":[
        // Access hosts docker engine
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        // Avoid VSCode extension reinstalls, see https://code.visualstudio.com/remote/advancedcontainers/avoid-extension-reinstalls
        // "source=unconstrained-vscode-extensions,target=/home/unco/.vscode-server/extensions,type=volume",
    ],
            
    "settings": {
        
        // Python location
        "python.defaultInterpreterPath": "/opt/venv/bin",
        "python.pythonPath": "/opt/venv/bin",
        "python.disableInstallationCheck": true,
                        
        // Typechecking and linting
        "python.languageServer": "Pylance",
        "python.linting.enabled": true,
        "python.analysis.typeCheckingMode": "basic",
        "python.analysis.diagnosticSeverityOverrides": {
            "reportUnboundVariable" : "information", 
            "reportImplicitStringConcatenation" : "warning" 
        },

        // Pytest integration
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": ["tests"],
        "python.testing.unittestEnabled": false,
        "python.testing.nosetestsEnabled": false,
                
        // Zsh Shell
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
            "zsh": {
              "path": "/bin/zsh",
              "args": ["-l"]
            }
          },

        // Misc
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "telemetry.enableTelemetry": false,
        "telemetry.telemetryLevel" : 0,

    },

    "extensions": [
        // Offical python plugin
		"ms-python.python",
        // Jupyter notebook integration
		"ms-toolsai.jupyter",
        // MiniZinc syntax highlighting
		"dekkerone.minizinc",
        // Access workspace via web browser (good for .html)
        "ritwickdey.liveserver",
        // CueLang syntax highlighting
        "nickgo.cuelang",
        // Markdown emoji previews
        "bierner.markdown-emoji",
        // Browse SQLite databases
        "alexcvzz.vscode-sqlite"
	],
    
    "runArgs": [ 
        "--init",
        "--net", "host"
    ],
        
    "containerEnv": {
        "DO_NOT_TRACK" : "1"
    },

}